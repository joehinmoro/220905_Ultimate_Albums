<%- include("../partials/head") %>
<section class="text-center mt-3 p-3">
    <h2>Albums</h2>

    <section class="container mt-3">
        <div class="card-group">
            <% for (let album of albums) {%>
            <div class="card text-bg-dark border-light mx-auto">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/albums/<%=album._id%>" class="text-light text-decoration-none"
                            ><%= album.title %></a
                        >
                    </h5>
                    <h6 class="card-subtitle mb-2">
                        <a href="" class="text-muted text-decoration-none"><%= album.artiste %></a>
                    </h6>
                    <ol class="list-group list-group-numbered list-group-flush">
                        <% for (let song of album.songs){ %>
                        <li class="list-group-item bg-dark text-light border-secondary text-start">
                            <%= song %>
                        </li>
                        <% } %>
                    </ol>
                </div>
                <div class="card-footer">
                    <btn href="#" class="btn btn-outline-light btn-sm card-link">Expand </btn>
                    <btn href="#" class="btn btn-outline-light btn-sm card-link">Edit</btn>
                    <btn href="#" class="btn btn-outline-light btn-sm card-link">Delete</btn>
                </div>
            </div>
            <% } %>
        </div>
    </section>
</section>
<%- include("../partials/foot") %>
